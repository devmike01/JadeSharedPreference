<?xml version="1.0" encoding="utf-8"?>
<android.support.v4.widget.NestedScrollView
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent">
<LinearLayout
        android:padding="20dp"
        android:orientation="vertical"
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".MainActivity">

    <EditText
            android:id="@+id/ed_1"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"/>
    <Button android:layout_width="wrap_content"
            android:text="Save String"
            android:id="@+id/save_btn1"
            android:layout_height="wrap_content"/>

    <EditText
            android:id="@+id/ed_2"
            android:inputType="number"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"/>
    <Button android:layout_width="wrap_content"
            android:text="Save Int"
            android:id="@+id/save_btn2"
            android:layout_height="wrap_content"/>


    <EditText
            android:id="@+id/ed_4"
            android:inputType="number"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"/>
    <Button android:layout_width="wrap_content"
            android:text="Save Long"
            android:id="@+id/save_btn4"
            android:layout_height="wrap_content"/>



    <EditText
            android:id="@+id/ed_5"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"/>
    <Button android:layout_width="wrap_content"
            android:text="Save StringSet"
            android:id="@+id/save_btn5"
            android:layout_height="wrap_content"/>



    <EditText
            android:id="@+id/ed_3"
            android:inputType="numberDecimal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"/>
    <Button android:layout_width="wrap_content"
            android:text="Save Float"
            android:id="@+id/save_btn3"
            android:layout_height="wrap_content"/>

    <TextView android:layout_width="wrap_content"
              android:layout_marginTop="10dp"
              android:textAppearance="?android:textAppearanceMedium"
              android:id="@+id/read_1"
              android:textColor="@android:color/holo_red_dark"
              android:layout_gravity="center_horizontal"
              tools:text="112"
              android:layout_height="wrap_content"/>

    <TextView android:layout_width="wrap_content"
              android:textAppearance="?android:textAppearanceMedium"
              android:layout_gravity="center_horizontal"
              android:id="@+id/read_2"
              android:layout_marginTop="10dp"
              android:layout_marginBottom="10dp"
              tools:text="113"
              android:layout_height="wrap_content"/>

    <TextView android:layout_width="wrap_content"
              android:textAppearance="?android:textAppearanceMedium"
              android:layout_gravity="center_horizontal"
              android:id="@+id/read_3"
              tools:text="114"
              android:layout_height="wrap_content"/>



    <TextView android:layout_width="wrap_content"
              android:textAppearance="?android:textAppearanceMedium"
              android:layout_gravity="center_horizontal"
              android:id="@+id/read_4"
              android:layout_marginTop="10dp"
              android:layout_marginBottom="10dp"
              tools:text="113"
              android:layout_height="wrap_content"/>

    <TextView android:layout_width="wrap_content"
              android:textAppearance="?android:textAppearanceMedium"
              android:layout_gravity="center_horizontal"
              android:id="@+id/read_5"
              tools:text="114"
              android:layout_height="wrap_content"/>
</LinearLayout>
</android.support.v4.widget.NestedScrollView>
